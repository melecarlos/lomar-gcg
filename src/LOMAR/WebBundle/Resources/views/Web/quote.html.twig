{% extends "base.html.twig" %}

{% block title %}LoMar | Get quote{% endblock %}

{% block body %}

{% block loading %}
        {{ include('loading.html.twig')}}
{% endblock %} 

<div class="transition-overlay"></div>

{% block header %}
        {{ include('header.html.twig')}}
{% endblock %}

<section class="internal-header overlay-dark" data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h2 class="title">GET QUOTE</h2>
        <ol class="breadcrumb">
          <li><a href="#">Home</a></li>
          <li><a href="#">Pages</a></li>
          <li class="active">Get quote</li>
        </ol>
      </div>
      <!-- end col-12 --> 
    </div>
    <!-- end row --> 
  </div>
  <!-- end container --> 
</section>
<!-- end internal-header -->
<section class="get-quote">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="titles">
          <h6>SEE OUR PRICE RANGE AND</h6>
          <h2>GET QUOTE</h2>
        </div>
        <!-- end title --> 
      </div>
      <!-- end col-12 -->
      <div class="col-xs-12">
     
      	<form>
        	<div class="form-group">
            	<label>Select your place</label>
                <select><option>Apartments</option></select>
            </div>
            <!-- end form-group -->
            <div class="form-group">
            	<label>Size of place (m2)</label>
                <input type="text">
            </div>
            <!-- end form-group -->
            <div class="form-group">
            	<label>Renovation type</label>
                <input type="text">
            </div>
            <!-- end form-group -->
            <div class="form-group">
            	<label>Select your neighberhood</label>
                <select><option>Liverpool - UK</option></select>
            </div>
            <!-- end form-group -->
            <div class="form-group">
            	<label>What is your budget</label>
                <input type="text">
            </div>
            <!-- end form-group -->
            <div class="form-group">
            	<label>Your e-mail or number</label>
                 <input type="text">
            </div>
            <!-- end form-group -->
             <div class="form-group">
            	<button type="submit">SEND IT</button>
            </div>
            <!-- end form-group -->
        </form>
      </div>
      <!-- end col-12 -->
    </div>
    <!-- end row --> 
  </div>
  <!-- end container --> 
</section>

{% block newsletter %}
        {{ include('newsletter.html.twig')}}
{% endblock %} 

{% block footer %}
        {{ include('footer.html.twig')}}
{% endblock %} 

{% block modal %}
        {{ include('modal.html.twig')}}
{% endblock %}

{% endblock %}


